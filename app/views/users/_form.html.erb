<div class="ui form">
    <%= form_with model: @user, local: true, data: {turbo: false} do |form| %> 
   
    <!-- Form fields go here -->
    <div>
        <%= form.label :username %>
        <%= form.text_field :username %>
    </div>
    
    <div>
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>
    
    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>
    
    <div>
        <%= form.submit "Create User" %>
    </div>
    <% end %>
</div>