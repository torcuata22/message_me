<h2 class="ui center aligned large icon header">
    <i class="circular bordered red coffee icon"></i>
    Let's chat over coffee
</h2>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui feed">
                    <div class="event">
                    <div class="content">
                        <div class="summary">
                          <br>  
                            <% @messages.each do |message| %>
                                <em><%= message.user.username %></em>: <%= message.body %>
                                <br><br>
                            <% end %>
                        
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
                           

    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="active item">
                    Home
                    </a>
                    <a class="item">
                    Messages
                    </a>
                    <a class="item">
                    Friends
                    </a>
                </div>
            </div>    
        </div>
    </div>

</div>

